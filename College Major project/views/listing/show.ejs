<% layout('/Layouts/boilerplate') -%>
<div class="row">
    <div class="col-md-8 offset-2">
        <h2 class="mt-3 mb-3 text-center">Lisiting Details</h2>
        <div class="card ">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="Listing_Image">
            <div class="card-body">
                <h3 class="card-text mb-2 mt-3 text-center"><b><%= listing.title %></b></h3>
                <p class="card-text  mb-2"><b>Description : </b><%=  listing.description %></p>
                <p class="card-text  mb-2"><b>Estimated Price : </b>&#8377; <%=  listing.price.toLocaleString("en-IN")%></p>
                <p class="card-text  mb-2"><b>Location : </b><%=  listing.location %></p>
                <p class="card-text  mb-2"><b>Country : </b><%=  listing.country %></p>
                <div class="btns">
                    <a href="/listing/<%= listing._id %>/edit" class="btn edit_btn">Edit this Listing</a>
                    <form method="POST" action="/listing/<%=listing._id%>?_method=DELETE">
                        <button class="btn btn-primary mb-5 ">Delete</button>
                    </form>
                    
                </div>
                
                
                
            </div>
        </div>
    </div>
</div>
