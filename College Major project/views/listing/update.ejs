<% layout('/Layouts/boilerplate') -%>
<div class="row"> 
  <div class="col-8 offset-2">
    <h3 class="mt-3 mb-3">Edit your Listing</h3>
        <form method="POST" action="/listing/<%= listing._id %>?_method=PUT">
          <div class="mb-3">
            <label for="tittle" class="form-label">Update Tittle</label>
            <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" />
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">Update Description</label>
            <textarea name="listing[description]" class="form-control"><%= listing.description %></textarea>
          </div>
          <div class="mb-3">
              <label for="image" class="form-label">Update Link</label>
              <input name="listing[image]" value="<%= listing.image %>" type="text" class="form-control"/>
          </div>
          <div class="row row-col-1 ">
            <div class="mb-3 col-md-4">
              <label for="price" class="form-label">Update Price</label>
              <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control"/>
            </div>
            <div class="mb-3 col-md-8">
              <label for="country" class="form-label">Update Country</label>
              <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control"/>
            </div>
          </div>
          <div class="mb-3">
            <label for="location" class="form-label">Update Tittle</label>
            <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control"/>
          </div>
          <button class="btn btn-primary mb-5" type="submit">Update</button>
    </form>
  </div>
</div>